@model IEnumerable<dynamic>

<h1>My all Stocks</h1>

@if (Model.Any() == false)
{
  <span>No stocks found</span>
}
else
{
  <table class="table table-hover table-dark">
    <thead>
      <tr>
        <th style="width: 3em;" scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Total Price</th>
        <th scope="col">Count</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var userStock in Model)
      {
        <tr>
                    <td><img style="height: 2em; width:2em" src="@Url.Content($"~/StockImages/{userStock.ImageUrl}")" alt="@userStock.Name"></td>
          <td>@userStock.Name</td>
          <td>@userStock.TotalPrice</td>
          <td>@userStock.StockCount</td>
        </tr>
      }
    </tbody>
  </table>
}