@model User

@{
    double amoutToAdd = default;
}

<link rel="stylesheet" href="~/css/login.css">

<form id="loginForm" asp-action="CashIn" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="@Model.Balance">Current Balance</label>
        <input disabled asp-for="@Model.Balance" type="number">
    </div>
    <div class="form-group">
        <label asp-for="@amoutToAdd">Amount to add</label>
        <input asp-for="@amoutToAdd" type="number" step="any">
    </div>
    <br>
    <button type="submit" class="submitbtn">Submit</button>
</form>
