@model User

@{
    double amoutToAdd = default;
}

<form asp-action="CashIn" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="@Model.Balance">Current Balance</label>
        <input disabled asp-for="@Model.Balance" type="number" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@amoutToAdd">Amount to add</label>
        <input asp-for="@amoutToAdd" type="number" class="form-control">
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
